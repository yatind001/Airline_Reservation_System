
<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title></title>
    </head>

    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3">Search Flights</h1>
            <h3 class = "text-sm-end"> Welcome Mr. <%= sampleData[0].user_name %></h2>
            

                    <div class="card" >
                        <div class="card-header">
                            <div class="row">
            
                                <div class="col">
                                    <a href="/project/login/user/<%= sampleData[0].user_id %>/my_tickets" class="btn btn-success  float-start">My Bookings</a>
                                </div>

                                <div class = "col">
                                    <a href="/project" class="btn btn-danger  float-end">Logout</a>
                                </div>
                            </div>
                        </div>

                        <div class="card-header">
                            <% if(message.success) { %>
                                <div class="alert alert-success">
                                    <%= message.success %>
                                </div>
                            <% } %>
                            
                            <% if(message.fail) { %>
                                    <div class="alert alert-danger">
                                        <%= message.fail %>
                                    </div>
                            <% } %>
                        </div>
           
                        <div class="card-body">
                            <form method="POST" action="/project/login/user/<%= sampleData[0].user_id %>/form_submit">
                                <div class="row" >
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label>From</label>
                                            <input type="text" name="from" id="from" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label>To</label>
                                            <input type="text" name="to" id="to" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label>Date</label>
                                            <input type="date" name="date" id="date" class="form-control" />
                                        </div>
                                    </div>

                                    
                                    <div class="col-md-2"></div>
                                        <div class="mb-3">
                                            <input type="submit" name="submit_button" class="btn btn-primary" Value="Search" >
                                        </div>
                                    </div>

                                </div>
                                  
                            </form>
                        </div>
                    </div>
               
        </div>  
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>
